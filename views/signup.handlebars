<div class="signup-box">
    <div>
        <h2>Sign Up</h2>
        <br>
        <form class="user-form" id="signup-form">
             <div class="form-inputs">
                <label for="name-input">Name:</label>
                <br>
                <input class="form-input" type="text" id="name-input" />
            </div>
            <br>
            <div class="form-inputs">
                <label for="email-input">Email:</label>
                <br>
                <input class="form-input" type="text" id="email-input" />
            </div>
            <br>
            <div class="form-inputs">
                <label for="pass-input">Password:</label>
                <br>
                <input class="form-input" type="password" id="pass-input" />
            </div>
            <br>
            <div class="form-inputs">
                <button class="btn" type="submit" id="new-sign-up">Sign Up !</button>
            </div>
        </form>
        <br>
        <p>Already have an account? Click <a href="/login">here.</a></p>
    </div>
</div>

<script src="/js/signup.js"></script>