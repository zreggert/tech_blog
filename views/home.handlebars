{{#each posts as |post| }}
<div class="all-posts-container">
    <div class="post-container">
        <div class="title">
            <h3>
                <a href="/post/{{post.id}}">{{post.title}}</a>
            </h3>
        </div>
        <div class="post-body">
            <p class="post-text">{{post.content}}</p>
        </div>
    </div>
</div>
{{/each}}