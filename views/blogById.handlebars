<div class="post-container">
    <div class="post-card">
        <div class="title">
            <h3>{{post.title}}</h3>
        </div>
        <div class="post-body">
            <p class="post-text">{{post.content}}</p>
        </div>
    </div>
    
    {{#if post.Comments}}
    <div class="comment-container">
        <div class="comment-header">
            <h3>Comments</h3>
        </div>
        <div class="comment-body">
            {{#each post.Comments}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    &mdash; {{User.username}}
                </p>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}

    <form id="new-comment-form" class="form-container">
        <div class="new-comment-header">
            <h3>Add New Comment</h3>
        </div>
        <div class="comment-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />
            <label for="comment-body">Comment</label>
            <textarea class="form-input" name="comment-input" id="comment-input"></textarea>
            <button type="submit" class="create-comment-btn">Post Comment</button>
        </div>
    </form>
</div>

<script src="/js/comment.js"></script>